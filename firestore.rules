
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // A user can get their own document. This is critical for subcollection queries.
      allow get: if request.auth.uid == userId;
      // Only admins can list all users.
      allow list: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
      // A user can create their own document on signup.
      allow create: if request.auth.uid == userId;
      // A user can update their own profile, an admin can update any.
      allow update: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
      // User documents cannot be deleted.
      allow delete: if false;

      // --- User-Private Subcollections ---
      
      match /deposits/{depositId} {
        // User can read their own deposits. Admin cannot list them here.
        allow read: if request.auth.uid == userId;
        // User can create their own deposit request.
        allow create: if request.auth.uid == userId;
        // Admin can update the status. User cannot.
        allow update: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
        // Deposits cannot be deleted.
        allow delete: if false;
      }

      match /withdrawals/{withdrawalId} {
        // User can read their own withdrawals. Admin cannot list them here.
        allow read: if request.auth.uid == userId;
        // User can create their own withdrawal request.
        allow create: if request.auth.uid == userId;
        // Admin can update the status. User cannot.
        allow update: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
        // Withdrawals cannot be deleted.
        allow delete: if false;
      }
      
      match /testimonials/{testimonialId} {
        // A user can fully manage their own testimonials.
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

    // Top-level collection for admin review.
    // Users can create (submit) but cannot read the list. Admins have full control.
    match /submissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }
    
    // Top-level collection for admin review of deposits.
    match /deposits/{depositId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }
    
    // Top-level collection for admin review of withdrawals.
    match /withdrawals/{withdrawalId} {
       allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
       allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

    match /agents/{agentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

    match /wallets/{walletId} {
      allow read, write: if false;
    }
  }
}
