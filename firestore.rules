
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // A user can get their own document. This is critical for subcollection queries.
      allow get: if request.auth.uid == userId;
      // Only admins can list all users.
      allow list: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
      // A user can create their own document on signup.
      allow create: if request.auth.uid == userId;
      // A user can update their own profile, an admin can update any.
      allow update: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
      // User documents cannot be deleted.
      allow delete: if false;
    }
    
    // --- User Subcollections ---
    
    match /users/{userId}/testimonials/{testimonialId} {
      // A user can fully manage their own testimonials.
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/deposits/{depositId} {
        // A user can read and write to their own deposits subcollection.
        allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/withdrawals/{withdrawalId} {
        // A user can read and write to their own withdrawals subcollection.
        allow read, write: if request.auth.uid == userId;
    }

    // --- Top-level Collections (mostly for Admin access) ---

    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

    match /submissions/{submissionId} {
      // Any authenticated user can create a submission record.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only admins can read or modify submissions.
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }
    
    match /deposits/{depositId} {
      // Users can create their own deposit request in this denormalized collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Admins can read, update, and delete all requests.
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }
    
    match /withdrawals/{withdrawalId} {
      // Users can create their own withdrawal request in this denormalized collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Admins can read, update, and delete all requests.
      allow read, update, delete: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

    match /agents/{agentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'admin@taskverse.io';
    }

  }
}
