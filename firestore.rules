
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Safely checks the 'role' field on the requesting user's own Firestore document.
      // This is the source of truth for admin status and avoids previous issues.
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // An admin can read any user profile. A user can only read their own profile.
      // This rule is safe because when isAdmin() is called for an admin,
      // it reads their *own* profile, which is permitted by the `request.auth.uid == userId` check.
      allow get: if request.auth != null && (isAdmin() || request.auth.uid == userId);

      // Any authenticated user can list users (needed for some UI elements, but consider restricting).
      allow list: if request.auth != null;
      
      // A user can create their own profile upon signup.
      allow create: if request.auth.uid == userId;

      // An admin can update any profile. A user can update their own with restrictions.
      allow update: if (request.auth != null && isAdmin()) || (
        request.auth.uid == userId && 
        !('role' in request.resource.data && request.resource.data.role != resource.data.role) &&
        !('level' in request.resource.data && request.resource.data.level != resource.data.level) &&
        !('walletBalance' in request.resource.data && request.resource.data.walletBalance > resource.data.walletBalance)
      );

      // Deleting users is not allowed from the client.
      allow delete: if false;

      // --- User Subcollections ---
    
      match /testimonials/{testimonialId} {
        // Admins and owners can read.
        allow read: if request.auth != null && (isAdmin() || request.auth.uid == userId);
        // Only owners can write.
        allow write: if request.auth.uid == userId;
      }

      match /deposits/{depositId} {
          // Admins and owners can read.
          allow read: if request.auth != null && (isAdmin() || request.auth.uid == userId);
          // Only owners can create.
          allow create: if request.auth.uid == userId;
          // Only admins can update.
          allow update: if request.auth != null && isAdmin();
      }

      match /withdrawals/{withdrawalId} {
          // Admins and owners can read.
          allow read: if request.auth != null && (isAdmin() || request.auth.uid == userId);
           // Only owners can create.
          allow create: if request.auth.uid == userId;
           // Only admins can update.
          allow update: if request.auth != null && isAdmin();
      }

      match /submissions/{submissionId} {
          // Admins and owners can read.
          allow read: if request.auth != null && (isAdmin() || request.auth.uid == userId);
           // Only owners can create.
          allow create: if request.auth.uid == userId;
           // Only admins can update/delete.
          allow update, delete: if request.auth != null && isAdmin();
      }
    }
    
    // --- Top-level Collections ---

    match /tasks/{taskId} {
      // Any authenticated user can read tasks.
      allow read: if request.auth != null;
      // ONLY admins can create, update, or delete tasks.
      allow write: if request.auth != null && isAdmin();
    }

    match /submissions/{submissionId} {
      // A user can create their own submission record in the top-level collection.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // ONLY Admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if request.auth != null && isAdmin();
    }
    
    match /deposits/{depositId} {
      // Users can create their own deposit record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if request.auth != null && isAdmin();
    }
    
    match /withdrawals/{withdrawalId} {
      // Users can create their own withdrawal record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if request.auth != null && isAdmin();
    }

    match /agents/{agentId} {
      // Any authenticated user can read agent information.
      allow read: if request.auth != null;
      // Only admins can add or change agents.
      allow write: if request.auth != null && isAdmin();
    }

  }
}
