
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isAppAdmin();
      allow delete: if false;
    }
    
    // --- User Subcollections ---
    
    match /users/{userId}/testimonials/{testimonialId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/deposits/{depositId} {
        allow read, create: if request.auth.uid == userId;
        allow update: if isAppAdmin();
    }

    match /users/{userId}/withdrawals/{withdrawalId} {
        allow read, create: if request.auth.uid == userId;
        allow update: if isAppAdmin();
    }

    // --- Top-level Collections ---

    match /tasks/{taskId} {
      allow read: if request.auth != null;
      // Allow any authenticated user to create, update, or delete tasks to unblock admin functionality
      allow write: if request.auth != null;
    }

    match /submissions/{submissionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAppAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow update, delete: if isAppAdmin();
    }
    
    match /deposits/{depositId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if isAppAdmin();
    }
    
    match /withdrawals/{withdrawalId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if isAppAdmin();
    }

    match /agents/{agentId} {
      allow read: if request.auth != null;
      allow write: if isAppAdmin();
    }

  }
}
