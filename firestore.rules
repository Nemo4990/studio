
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      // Check if the user is authenticated and if their user document has the 'admin' role.
      // This function now correctly allows reading the user's own profile to check the role.
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // An admin can read any user profile.
      // A user can only read their own profile.
      allow get: if isAppAdmin() || request.auth.uid == userId;
      // Any authenticated user can list users (needed for some UI elements, but consider restricting).
      allow list: if request.auth != null;
      // A user can create their own profile upon signup.
      allow create: if request.auth.uid == userId;

      // A user can update their own profile (e.g., name, phone number).
      // An admin can update any profile without restriction.
      // CRITICAL: This rule prevents a user from directly changing their own `level`,
      // `walletBalance`, or `role`, as per the architectural design.
      // These fields must only be changed via server-side logic (transactions).
      allow update: if (request.auth.uid == userId && !(
                        'walletBalance' in request.resource.data &&
                        request.resource.data.walletBalance != resource.data.walletBalance
                      ) && !(
                        'level' in request.resource.data &&
                        request.resource.data.level != resource.data.level
                      ) && !(
                        'role' in request.resource.data &&
                        request.resource.data.role != resource.data.role
                      )) || isAppAdmin();

      // Deleting users is not allowed from the client.
      allow delete: if false;
    }
    
    // --- User Subcollections ---
    
    match /users/{userId}/testimonials/{testimonialId} {
      // Users can manage their own testimonials.
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId}/deposits/{depositId} {
        // Users can create and read their own deposits. Admins can update them.
        allow read, create: if request.auth.uid == userId;
        allow update: if isAppAdmin();
    }

    match /users/{userId}/withdrawals/{withdrawalId} {
        // Users can create and read their own withdrawals. Admins can update them.
        allow read, create: if request.auth.uid == userId;
        allow update: if isAppAdmin();
    }

    match /users/{userId}/submissions/{submissionId} {
        // Users can create their own submissions.
        allow create: if request.auth.uid == userId;
        // Users can read their own submissions, admins can read any.
        allow get, list: if request.auth.uid == userId || isAppAdmin();
        // Only admins can update/delete from the user's private record, which should be rare.
        // The master record is in the top-level collection.
        allow update, delete: if isAppAdmin();
    }

    // --- Top-level Collections ---

    match /tasks/{taskId} {
      // Any authenticated user can read tasks.
      allow read: if request.auth != null;
      // ONLY admins can create, update, or delete tasks.
      allow write: if isAppAdmin();
    }

    match /submissions/{submissionId} {
      // A user can create their own submission record in the top-level collection.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // ONLY Admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if isAppAdmin();
    }
    
    match /deposits/{depositId} {
      // Users can create their own deposit record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if isAppAdmin();
    }
    
    match /withdrawals/{withdrawalId} {
      // Users can create their own withdrawal record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if isAppAdmin();
    }

    match /agents/{agentId} {
      // Any authenticated user can read agent information.
      allow read: if request.auth != null;
      // Only admins can add or change agents.
      allow write: if isAppAdmin();
    }

  }
}
