
rules_version = '2';
service cloud.firestore {

  function isAdmin() {
    return request.auth != null && request.auth.token.email == 'admin@taskverse.io';
  }

  match /databases/{database}/documents {

    // --- User Collection ---
    match /users/{userId} {
      allow get: if isAdmin() || (request.auth != null && request.auth.uid == userId);
      allow list: if isAdmin();
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if isAdmin() || (
        request.auth != null && request.auth.uid == userId &&
        !('role' in request.resource.data && request.resource.data.role != resource.data.role) &&
        !('level' in request.resource.data && request.resource.data.level != resource.data.level) &&
        !('walletBalance' in request.resource.data && request.resource.data.walletBalance > resource.data.walletBalance)
      );
      allow delete: if false;

      // --- User Subcollections ---
      match /testimonials/{testimonialId} {
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow list: if isAdmin();
        allow create, update, delete: if request.auth != null && request.auth.uid == userId;
      }

      match /deposits/{depositId} {
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update: if isAdmin();
      }

      match /withdrawals/{withdrawalId} {
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update: if isAdmin();
      }

      match /submissions/{submissionId} {
        allow get: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow list: if (request.auth != null && request.auth.uid == userId) || isAdmin();
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if isAdmin();
      }
    }
    
    // --- Top-level Collections ---
    match /tasks/{taskId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    match /submissions/{submissionId} {
      allow read, update, delete: if isAdmin();
      allow create: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
    }
    
    match /deposits/{depositId} {
      allow read: if request.auth != null;
      allow create: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin();
    }
    
    match /withdrawals/{withdrawalId} {
      allow read: if request.auth != null;
      allow create: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
      allow update, delete: if isAdmin();
    }

    match /agents/{agentId} {
      allow get, list: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

  }
}
