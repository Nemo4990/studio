
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // NOTE: isAppAdmin() function was removed to fix a recurring permissions issue.
    // Admin access is now checked inline where needed using:
    // (request.auth != null && request.auth.token.email == 'admin@taskverse.io')

    match /users/{userId} {
      // An admin can read any user profile.
      // A user can only read their own profile.
      allow get: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io') || request.auth.uid == userId;
      // Any authenticated user can list users (needed for some UI elements, but consider restricting).
      allow list: if request.auth != null;
      // A user can create their own profile upon signup.
      allow create: if request.auth.uid == userId;

      // A user can update their own profile (e.g., name, phone number).
      // An admin can update any profile without restriction.
      allow update: if (
        // Admins can do anything
        (request.auth != null && request.auth.token.email == 'admin@taskverse.io')
      ) || (
        // Users can update their own profile, but with restrictions
        request.auth.uid == userId && 
        
        // Prevent users from changing their own role
        !('role' in request.resource.data && request.resource.data.role != resource.data.role) &&
        
        // Prevent users from changing their own level
        !('level' in request.resource.data && request.resource.data.level != resource.data.level) &&
        
        // Prevent users from directly INCREASING their wallet balance.
        // They are allowed to decrease it (for purchases like buying task trials).
        !('walletBalance' in request.resource.data && request.resource.data.walletBalance > resource.data.walletBalance)
      );

      // Deleting users is not allowed from the client.
      allow delete: if false;
    }
    
    // --- User Subcollections ---
    
    match /users/{userId}/testimonials/{testimonialId} {
      // Users can write their own testimonials. Admins can read any.
      allow get, list: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
      allow write: if request.auth.uid == userId;
    }

    match /users/{userId}/deposits/{depositId} {
        // Users can create their own deposits. Admins can read any and update them.
        allow get, list: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
        allow create: if request.auth.uid == userId;
        allow update: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

    match /users/{userId}/withdrawals/{withdrawalId} {
        // Users can create their own withdrawals. Admins can read any and update them.
        allow get, list: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
        allow create: if request.auth.uid == userId;
        allow update: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

    match /users/{userId}/submissions/{submissionId} {
        // Users can create their own submissions.
        allow create: if request.auth.uid == userId;
        // Users can read their own submissions, admins can read any.
        allow get, list: if request.auth.uid == userId || (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
        // Only admins can update/delete from the user's private record, which should be rare.
        // The master record is in the top-level collection.
        allow update, delete: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

    // --- Top-level Collections ---

    match /tasks/{taskId} {
      // Any authenticated user can read tasks.
      allow read: if request.auth != null;
      // ONLY admins can create, update, or delete tasks.
      allow write: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

    match /submissions/{submissionId} {
      // A user can create their own submission record in the top-level collection.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // ONLY Admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }
    
    match /deposits/{depositId} {
      // Users can create their own deposit record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }
    
    match /withdrawals/{withdrawalId} {
      // Users can create their own withdrawal record in the top-level collection.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Only admins can read, update, or delete from the top-level collection.
      allow read, update, delete: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

    match /agents/{agentId} {
      // Any authenticated user can read agent information.
      allow read: if request.auth != null;
      // Only admins can add or change agents.
      allow write: if (request.auth != null && request.auth.token.email == 'admin@taskverse.io');
    }

  }
}
