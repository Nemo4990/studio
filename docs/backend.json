{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "avatarUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's avatar."
        },
        "role": {
          "type": "string",
          "enum": ["user", "admin"],
          "description": "The user's role."
        },
        "level": {
            "type": "number"
        },
        "walletBalance": {
            "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the account was created."
        }
      },
      "required": ["name", "email", "role", "level", "walletBalance", "createdAt"]
    }
  },
  "auth": {
    "providers": ["email"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    }
  }
}
