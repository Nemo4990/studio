{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the NovaChain Nexus platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user.",
          "format": "uuid"
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "username": {
          "type": "string",
          "description": "Username of the user."
        },
        "level": {
          "type": "number",
          "description": "The current level of the user."
        },
        "walletBalance": {
          "type": "number",
          "description": "The current balance of the user's wallet."
        },
        "lastDailyCheckin": {
          "type": "string",
          "description": "Timestamp of the last daily check-in claim.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "username",
        "level",
        "walletBalance"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task that users can complete.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the task."
        },
        "name": {
          "type": "string",
          "description": "Name of the task."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the task."
        },
        "reward": {
          "type": "number",
          "description": "The reward amount for completing the task."
        },
        "requiredLevel": {
          "type": "number",
          "description": "The user level required to access the task."
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "reward",
        "requiredLevel"
      ]
    },
    "Submission": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Submission",
      "type": "object",
      "description": "Represents a user's submission for a task. Contains denormalized user and task data for easier querying in the admin panel.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the submission."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Submission)"
        },
        "taskId": {
          "type": "string",
          "description": "Reference to Task. (Relationship: Task 1:N Submission)"
        },
        "submittedAt": {
          "type": "string",
          "description": "Date and time when the task was submitted.",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "description": "Status of the submission (e.g., pending, approved, rejected)."
        },
        "taskTitle": {
          "type": "string",
          "description": "Denormalized title of the submitted task."
        },
        "user": {
          "type": "object",
          "description": "Denormalized user data for display purposes.",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "avatarUrl": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "name",
            "email"
          ]
        },
        "proof": {
          "type": "string",
          "description": "A URL or reference to the proof of task completion."
        },
        "reward": {
          "type": "number",
          "description": "The reward amount for the task at the time of submission."
        }
      },
      "required": [
        "id",
        "userId",
        "taskId",
        "submittedAt",
        "status",
        "taskTitle",
        "user",
        "proof",
        "reward"
      ]
    },
    "Deposit": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Deposit",
      "type": "object",
      "description": "Represents a local currency deposit made by a user via an agent.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the deposit."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Deposit)"
        },
        "agentId": {
          "type": "string",
          "description": "Reference to the Agent handling the deposit."
        },
        "amount": {
          "type": "number",
          "description": "Amount of local currency deposited."
        },
        "currency": {
          "type": "string",
          "description": "Local currency of the deposit (e.g., USD, NGN)."
        },
        "status": {
          "type": "string",
          "description": "Status of the deposit (e.g., pending, confirmed, failed).",
          "enum": [
            "pending",
            "confirmed",
            "failed"
          ]
        },
        "proofOfPayment": {
          "type": "string",
          "description": "URL or reference to the user's proof of payment.",
          "format": "uri"
        },
        "createdAt": {
          "type": "string",
          "description": "Date and time the deposit was requested.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "agentId",
        "amount",
        "currency",
        "status",
        "proofOfPayment",
        "createdAt"
      ]
    },
    "Withdrawal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Withdrawal",
      "type": "object",
      "description": "Represents a user's withdrawal request to a local bank account.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the withdrawal request."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Withdrawal)"
        },
        "amount": {
          "type": "number",
          "description": "Amount of local currency requested for withdrawal."
        },
        "currency": {
          "type": "string",
          "description": "Local currency for withdrawal (e.g., USD, NGN)."
        },
        "userBankInfo": {
          "type": "object",
          "description": "User's bank account details for the withdrawal.",
          "properties": {
            "bankName": {
              "type": "string"
            },
            "accountNumber": {
              "type": "string"
            },
            "accountName": {
              "type": "string"
            }
          },
          "required": [
            "bankName",
            "accountNumber",
            "accountName"
          ]
        },
        "status": {
          "type": "string",
          "description": "Status of the withdrawal request (e.g., pending, approved, rejected).",
          "enum": [
            "pending",
            "approved",
            "rejected"
          ]
        },
        "requestedAt": {
          "type": "string",
          "description": "Date and time when the withdrawal request was made.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "amount",
        "currency",
        "userBankInfo",
        "status",
        "requestedAt"
      ]
    },
    "Testimonial": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Testimonial",
      "type": "object",
      "description": "Represents a user testimonial.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the testimonial."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Testimonial)"
        },
        "content": {
          "type": "string",
          "description": "The testimonial text."
        },
        "dateCreated": {
          "type": "string",
          "description": "Date the testimonial was created",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "content",
        "dateCreated"
      ]
    },
    "Agent": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Agent",
      "description": "Represents a payment agent for local deposits and withdrawals.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the agent."
        },
        "name": {
          "type": "string",
          "description": "Name of the agent."
        },
        "country": {
          "type": "string",
          "description": "Country the agent operates in (e.g., 'USA', 'Nigeria')."
        },
        "bankName": {
          "type": "string",
          "description": "Name of the agent's bank."
        },
        "accountNumber": {
          "type": "string",
          "description": "The agent's bank account number for deposits."
        }
      },
      "required": [
        "id",
        "name",
        "country",
        "bankName",
        "accountNumber"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Collection of user profiles, indexed by userId."
    },
    "/tasks/{taskId}": {
      "schema": {
        "$ref": "#/entities/Task"
      },
      "description": "Collection of tasks available for users to complete, indexed by taskId."
    },
    "/submissions/{submissionId}": {
      "schema": {
        "$ref": "#/entities/Submission"
      },
      "description": "Top-level collection of all task submissions from all users."
    },
    "/users/{userId}/deposits/{depositId}": {
      "schema": {
        "$ref": "#/entities/Deposit"
      },
      "description": "Collection of deposits for a specific user."
    },
    "/users/{userId}/withdrawals/{withdrawalId}": {
      "schema": {
        "$ref": "#/entities/Withdrawal"
      },
      "description": "Collection of withdrawal requests for a specific user."
    },
    "/users/{userId}/testimonials/{testimonialId}": {
      "schema": {
        "$ref": "#/entities/Testimonial"
      },
      "description": "Collection of testimonials created by a specific user, indexed by testimonialId."
    },
    "/agents/{agentId}": {
      "schema": {
        "$ref": "#/entities/Agent"
      },
      "description": "Collection of payment agents available for deposits and withdrawals."
    }
  }
}
